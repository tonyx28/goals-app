<!DOCTYPE html>
<html>
<head>
  <title>GoalApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render "layouts/errors" %>

  <% if logged_in? %>
  <%= button_to current_user.username, user_url(current_user), method: :get %>
  <%= button_to "Sign Out", session_url, method: :delete %>
  <% else %>
  <% unless current_page?(controller: :users, action: :new) %>
  <%= button_to "Sign Up", new_user_url, method: :get %>
  <% end %>
  <% unless current_page?(controller: :sessions, action: :new) %>
  <%= button_to "Sign In", new_session_url, method: :get %>
  <% end %>
  <% end %>

<%= yield %>

</body>
</html>
